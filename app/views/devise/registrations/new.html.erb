<div class="box">
  <h2 class="title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "field" %>
    </div>

    <div class="space">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
    </div>

    <div class="space">
      <%= f.label :password, class: "label" %>
      <% if @minimum_password_length %>
        <span class="label-hint">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
    </div>

    <div class="space">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
    </div>

    <div>
      <%= f.submit "Sign up", class: "submit" %>
    </div>
  <% end %>

  <div class="link">
    <%= render "devise/shared/links" %>
  </div>
</div>
