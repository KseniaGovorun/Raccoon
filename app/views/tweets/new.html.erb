<div class="box">
  <h2 class="title">New tweet</h2>
<%= form_with scope: :tweet, url: tweets_path, local: true do |f| %>
<div>
    <%= f.text_area :body%>
</div>
<div>
      <%= f.submit "Create", class: "submit" %>
</div>
<% end %>
<div>
      <%= link_to "Back", tweets_path, class: "link1" %> 
</div>
</div>
