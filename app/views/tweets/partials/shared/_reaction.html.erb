<div class="border my-3"></div>
<div class="flex justify-between items-center ">
  <span class="like hover:text-red-500">♡ Like</span>
  <div class="border h-6"></div>
  <span class="like hover:text-green-500">🗨️ Comment</span>
  <div class="border h-6"></div>
  <% if @tweet&.user != current_user %>
      <%= button_to "⤷ Retweet", retweet_tweet_path(tweet), class: "like hover:text-blue-500" %>
  <% else %>
    <span class="like hover:text-blue-500">⤷ Retweet</span>
  <% end %>
</div>
