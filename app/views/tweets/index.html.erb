<div class="container mx-auto p-4">
  <h1 class="title">Untwitter</h1>
  <div class="space-y-6">
    <div class="box">
      <%= link_to "Create", new_tweet_path, class: "submit" %>
    </div>
    
    <% @tweets.reverse_each do |tweet| %>
      <div class="border-b border-gray-200 pb-10">
        <div class="box relative">
          <span><%= tweet.user.username %></span>
          
          <div class="label2">
            <div class="ml-auto">
              <span class="text-timestamp"><%= tweet.created_at %></span> 
            </div>
          </div>

          <p class="mb-2"><%= tweet.body %></p>

          <div class="label2">
            <div class="flex items-center ml-auto">
              <%= link_to "Open", tweet_path(tweet), class: "action-link" %>
              <% if current_user.id == tweet.user_id %>
                <%= link_to "Edit", edit_tweet_path(tweet), class: "edit-link" %>
                <%= button_to "Delete", tweet_path(tweet), method: :delete, class: "delete-link" %>
              <% end %>
              <span class="ml-4">â™¡ Like</span>
              <span class="ml-4">ðŸ’¬ Comment</span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
