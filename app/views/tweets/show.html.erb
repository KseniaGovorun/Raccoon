<div class="container mx-auto p-4">
  <h1 class="title">Tweet</h1>
   <div class="box relative">
          <span>üë§ <%= @tweet.user.username %></span>
          <span class="text-xs text-gray-500"><%= time_ago_in_words(@tweet.created_at) %> ago</span>
          <%= turbo_frame_tag @tweet do %>
               <p class="my-5 text-xl"><%= @tweet.body%></p>

              <div class="text-timestamp top-3 right-2">
              <% if user_signed_in? && @tweet.user == current_user %>
                <%= link_to "Edit", edit_tweet_path(@tweet), class: "edit-link" %>
                <%= button_to "Delete", tweet_path(@tweet), method: :delete, class: "delete-link" %>
              <% end %>
              </div>
          <% end %>
          <div class="border my-3"></div>
          <div class="flex justify-between items-center ">
            <span class="like hover:text-red-500">‚ô° Like</span>
            <div class="border h-6"></div>
            <span class="like hover:text-green-500">üó®Ô∏è Comment</span>
            <div class="border h-6"></div>
            <span class="like hover:text-blue-500">‚§∑ Reply</span>
          </div>

      <%= link_to "Back", tweets_path, class: "link1" %> 
   </div>
</div>
