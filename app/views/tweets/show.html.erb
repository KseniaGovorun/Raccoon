<div class="container mx-auto p-4">
  <h1 class="title">Tweet</h1>
  
  <div class="space-y-6">
    <div class="box border-b border-gray-200 pb-10">
      <div class="relative">
        <span><%= @tweet.user.username %></span> 
        
        <div class="label flex justify-between items-center">
          <div class="ml-auto">
            <span class="absolute right-0 top-0 text-gray-500"><%= @tweet.created_at %></span> 
          </div>
        </div>

        <p class="mb-2"><%= @tweet.body %></p>

        <div class="label flex justify-between items-center">
          <div class="flex items-center ml-auto">
            <%= link_to "Open", tweet_path(@tweet), class: "text-blue-500 hover:underline ml-4" %>
            <% if current_user.id == @tweet.user_id %>
              <%= link_to "Edit", edit_tweet_path(@tweet), class: "text-green-500 hover:underline ml-4" %>
              <%= link_to "Delete", tweet_path(@tweet), method: :delete, class: "text-red-500 hover:underline ml-4" %>
            <% end %>
            <span class="ml-4">â™¡ Like</span>
            <span class="ml-4">ðŸ’¬ Comment</span>
          </div>
        </div>
      </div>
      <div>
      <%= link_to "Back", tweets_path, class: "link1" %> 
</div>
    </div>
  </div>
</div>
